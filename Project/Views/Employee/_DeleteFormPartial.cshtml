


<div class="modal fade" id="kt_modal_new_card" tabindex="-1" style="display: none;" aria-hidden="true">
	<div class="modal-dialog modal-dialog-centered mw-650px">
		<div class="modal-content">
			<div class="modal-header">
				<h2>Delete Employee</h2>
				<div class="btn btn-sm btn-icon btn-active-color-primary" data-bs-dismiss="modal">
					<span class="svg-icon svg-icon-1">
						<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
							<rect opacity="0.5" x="6" y="17.3137" width="16" height="2" rx="1" transform="rotate(-45 6 17.3137)" fill="black"></rect>
							<rect x="7.41422" y="6" width="16" height="2" rx="1" transform="rotate(45 7.41422 6)" fill="black"></rect>
						</svg>
					</span>
				</div>
			</div>


			<form method="POST" class="form fv-plugins-bootstrap5 fv-plugins-framework"
				  asp-controller="Employee" asp-action="Delete" id="kt_modal_new_card_form">

				<input id="empToDeleteId" type="text" name="Id" hidden="">
				<input type="text" name="port_slug" value="" hidden="">

				<div class="modal-body scroll-y mx-5 mx-xl-15 my-7">
					<!--begin::Form-->
					<div class="scroll-y me-n7 pe-7" id="kt_modal_add_customer_scroll" data-kt-scroll="true" data-kt-scroll-activate="{default: false, lg: true}" data-kt-scroll-max-height="auto" data-kt-scroll-dependencies="#kt_modal_add_customer_header" data-kt-scroll-wrappers="#kt_modal_add_customer_scroll" data-kt-scroll-offset="300px" style="max-height: 162px;">
						<h2 class="text-center text-danger">Are you sure you want to delete <p style="display: inline;" id="empToDeleteName" class="text-dark"></p> ?</h2>
						<div class="form-group row">
							<!--begin::Actions-->
							<div class="text-center pt-15">
								<button asp-controller="Employee" asp-action="Index" class="btn btn-light me-3">Discard</button>
								<button type="submit" class="btn btn-danger">
									<span class="indicator-label">Delete Employee</span>

								</button>
							</div>
						</div>
					</div>
				</div><div></div>
			</form>

		</div>
	</div>
	<!--end::Modals-->
</div>